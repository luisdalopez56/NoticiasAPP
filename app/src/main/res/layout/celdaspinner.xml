<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenProveedor"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elmundo_logo" />

    <TextView
        android:id="@+id/nombreProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Proveedor"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagenProveedor"
        app:layout_constraintStart_toEndOf="@+id/imagenProveedor"
        app:layout_constraintTop_toTopOf="@+id/imagenProveedor"
        tools:text="Proveedor" />
</android.support.constraint.ConstraintLayout>